.product_list{
  display: flex;
  flex-direction: row;
  width: 96%;
  height: 150rpx;
  align-self: center;
  align-items: center;
  justify-content: space-between;
}
.product_list_1{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-left: 30rpx;
}
.product_list_2{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.product_list_3{
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
}
.product_list_4{
  display: flex;
  flex-direction: row;
  width: 25%;
  justify-content: space-between;
  font-size: 20px;
  align-items: center;
}

.line{
  width: 100%;
  height: 5rpx;
  background-color: rgb(136, 135, 135);
  margin-bottom: 10rpx;
}


.anniu{
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 20rpx;
  justify-content: space-between;
  width: 100%;
  background-color: rgb(238, 238, 238);
  align-items: center;
}
.delete{
  margin-left: 0rpx;
  margin-bottom: 100rpx;
}
.contact{
  margin-left: -180rpx;
  margin-bottom: 100rpx;
}
.pay{
  display: flex;
  flex-direction: row;
  width: 30%;
  align-items: center;
  align-self: center;
  justify-content: center;
  height: 80rpx;
  border-radius: 50rpx;
  background-color: #FF3D46;
  margin-bottom: 100rpx;
}
.pay #purchase{
  color: #F1F8E9;
}