/* 商品 */
.ProductBox{
  flex-direction:column;
  display: flex;
  margin-top: 10rpx;
  width: 46%;
  margin-left: 2%;
  height: 450rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 2px 2px 2px #cdcfcf;
}
.product{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-self: center;
  align-items: center; 
  background-color: snow;
}
.product_1{
