/* 轮播图 */
.banner{
  display: flex;
  flex-direction: row;
  align-self: center;
  width: 100%;
  height: 750rpx;
}
.banner_1{
  width: 100%;
  height: 750rpx;
  overflow: hidden;
}

/* 产品信息 */
.product{
  display: flex;
  flex-direction: column;
  width: 96%;
  align-self: center;
  margin-bottom: 20rpx;
}
.product_1{
  display: flex;
  flex-direction: row;
  width: 60%;
  font-size: 23px;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}


.line{
  width: 100%;
  height: 15rpx;
  background-color: rgb(209, 209, 209);
  margin-bottom: 10rpx;
}
/* 商品详情 */
.product_xq{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 20px;
}


/* 购买按钮 */
.pay{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  align-self: center;
  position: fixed;
  bottom: 0;
  background-color: #fff;
}
.pay_1{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-self: center;
  justify-content: center;
  width: 20%;
}
.pay_2{
  display: flex;
  width: 80%;
  height: 100rpx;
  flex-direction: row;
  align-self: center;
  align-items: center;
  justify-content: center;
  background-color: #ff8601;
  color: #fff;
  font-size: 18px;
}

